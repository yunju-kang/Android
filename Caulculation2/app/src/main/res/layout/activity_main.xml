<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TableRow>
        <EditText
            android:id="@+id/Edit1"
            android:layout_span="5"
            android:layout_height="60dp"
            android:hint="숫자1 입력"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </TableRow>




    <TableRow>
        <EditText
            android:id="@+id/Edit2"
            android:layout_span="5"
            android:hint="숫자2 입력"
            android:textSize="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"/>
    </TableRow>


    <TableRow
        android:layout_marginTop="30dp">
            <Button
                android:id="@+id/num0"
                android:text="0"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num1"
                android:text="1"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num2"
                android:text="2"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num3"
                android:text="3"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/num4"
                android:text="4"
                android:textSize="20dp"
                android:layout_weight="1"/>
    </TableRow>




    <TableRow>
        <Button
            android:id="@+id/num5"
            android:text="5"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/num6"
            android:text="6"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/num7"
            android:text="7"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/num8"
            android:text="8"
            android:textSize="20dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/num9"
            android:text="9"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </TableRow>



    <TableRow>
        <Button
            android:id="@+id/Add"
            android:text="더하기(+)"
            android:layout_span="5"
            android:textSize="20dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"/>
    </TableRow>




    <TableRow>
        <Button
            android:id="@+id/Sub"
            android:text="빼기(-)"
            android:layout_span="5"
            android:textSize="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"/>
    </TableRow>



    <TableRow>
        <Button
            android:id="@+id/Mul"
            android:text="곱하기(x)"
            android:layout_span="5"
            android:textSize="20dp"
            android:layout_height="60dp"
            android:layout_weight="1"/>
    </TableRow>




    <TableRow>
        <Button
            android:id="@+id/Div"
            android:layout_height="60dp"
            android:layout_span="5"
            android:text="나누기(%)"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </TableRow>




    <TableRow>
        <TextView
            android:id="@+id/Result"
            android:textSize="30dp"
            android:text="계산결과:"
            android:layout_span="5"
            android:layout_marginTop="30dp"
            android:layout_weight="1"/>
    </TableRow>
</TableLayout>